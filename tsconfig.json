{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/",
    "resolveJsonModule": true
  },
  "lib": ["ES2020"],
  "include": ["src/"]
}